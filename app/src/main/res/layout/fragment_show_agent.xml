<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.agent.ShowAgent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:backgroundTint="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/baseline_150dp">

                <TextView
                    android:layout_marginStart="@dimen/baseline_10dp"
                    android:layout_marginEnd="@dimen/baseline_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtName"
                    android:textAllCaps="true"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="Name"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/txtStatus"
                android:textSize="17sp"
                android:padding="@dimen/baseline_10dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/baseline_10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/baseline_2dp"
                    android:background="@color/grey"/>
                <TextView
                    android:layout_marginTop="@dimen/baseline_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RFID"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtRfid"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/baseline_2dp"
                    android:background="@color/grey"/>
                <TextView
                    android:layout_marginTop="@dimen/baseline_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agent ID"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAgentId"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/baseline_2dp"
                    android:background="@color/grey"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPhone"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/baseline_2dp"
                    android:background="@color/grey"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDob"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/baseline_2dp"
                    android:background="@color/grey"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtGender"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/baseline_2dp"
                    android:background="@color/grey"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAddress"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/baseline_2dp"
                    android:background="@color/grey"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/region"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtRegion"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/baseline_2dp"
                    android:background="@color/grey"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/district"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDistrict"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/baseline_2dp"
                    android:background="@color/grey"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtGPS"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/baseline_2dp"
                    android:background="@color/grey"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Leader"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSupervisor"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/baseline_2dp"
                    android:background="@color/grey"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registration Date"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/baseline_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtRegister"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/baseline_2dp"
                    android:background="@color/grey"/>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_attendance"
                android:textStyle="bold"
                android:backgroundTint="@color/primary"
                android:id="@+id/btnViewAttendance"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/baseline_20dp"
                android:layout_marginBottom="@dimen/baseline_20dp"/>


        </LinearLayout>
    </ScrollView>

</FrameLayout>