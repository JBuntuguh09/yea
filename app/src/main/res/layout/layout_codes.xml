<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linMain"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/baseline_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/baseline_0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtNum"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="@dimen/baseline_0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtCode"
            android:layout_weight="6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/baseline_5dp"
        android:layout_marginTop="@dimen/baseline_5dp"
        android:padding="@dimen/baseline_5dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/baseline_2dp"
        app:layout_constraintTop_toBottomOf="@id/linMain"/>

</androidx.constraintlayout.widget.ConstraintLayout>